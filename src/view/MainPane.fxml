<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/9.0.1" fx:controller="controller.MainPaneController">
   <children>
      <VBox prefHeight="300.0" prefWidth="800.0">
         <children>
            <HBox prefHeight="30.0" prefWidth="800.0">
               <VBox.margin>
                  <Insets bottom="30.0" top="30.0" />
               </VBox.margin>
               <children>
                  <Label text="Wybierz szyfr">
                     <HBox.margin>
                        <Insets left="100.0" right="20.0" top="4.0" />
                     </HBox.margin>
                  </Label>
                  <ChoiceBox fx:id="encriptionChoiseBox" prefWidth="200.0" />
               </children>
            </HBox>
            <HBox prefHeight="130.0" prefWidth="800.0">
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
               <children>
                  <Label text="Wpisz tekst">
                     <HBox.margin>
                        <Insets left="100.0" right="30.0" />
                     </HBox.margin>
                  </Label>
                  <TextArea fx:id="codeTextField" prefHeight="200.0" prefWidth="400.0" />
                  <Label fx:id="actionTitleLabel">
                     <HBox.margin>
                        <Insets left="30.0" top="50.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="30.0" prefWidth="800.0">
               <children>
                  <Button fx:id="encryptButton" mnemonicParsing="false" prefWidth="100.0" text="Szyfruj">
                     <HBox.margin>
                        <Insets left="280.0" right="20.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="decryptButton" mnemonicParsing="false" prefWidth="100.0" text="Deszyfruj" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
